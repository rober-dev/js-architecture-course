FROM node:alpine

# Create app directory
WORKDIR /usr/src/app

## The wait.sh script
ADD https://github.com/ufoscout/docker-compose-wait/releases/download/2.2.1/wait /wait
RUN chmod +x /wait

RUN npm i nodemon -g

# Port to expose
EXPOSE 5000

# Run app
CMD /wait && cd packages/api && yarn dev:debug
